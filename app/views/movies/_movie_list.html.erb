<% movies.each do |movie| %>
  <div class='col col-sm-3 col-md-3 col-lg-3 margin-left-40'>
    <div class='row'>
      <%= link_to(movie) do %>
        <%= image_tag show_image(movie.images.first), class: 'home-posters' if movie.images.present? %>
      <% end %>
    </div>
    <div class='row font-white'>
      <h4><%= movie.name %></h4>
      <p><%= movie.released_date %></p>
    </div>
  </div>
<% end %>
