<div class='modal fade' id='movie_trailer' tabindex='-1' role='dialog' aria-labelledby='myModalLabel'>
  <div class='modal-dialog' role='document'>
    <% if movie.embeded_url %>
      <%= raw(youtube_embed movie.embeded_url) %>
    <% else %>
      <em>No trailer for this Movie</em>
    <% end %>
  </div>
</div>
