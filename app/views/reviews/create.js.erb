<% if @review.id %>
  $('#reviews').prepend("<%= escape_javascript render(partial: 'movies/review', locals: {review: @review}) %>");
  $('#review_review').val('');
  show_alert('alert-success','Review Created');
  $('.star-rating').raty({path: '/assets',readOnly: 'true', score: <%= @movie.cal_average_rating %>})
<% else %>
  <% flash.each do|t| %>
    show_alert('alert-danger',<%= raw (t.include?('&quot;') ? t.gsub('&quot;', '') : t) %>);
  <% end %>
<% end %>
